<?xml version="1.0"?>

<!--
    Autopilot Configuration for the BAC-TSR2.
-->

<!--
    This is still in development, so not all of the controllers are
    currently used, or work properly.
-->

<PropertyList>

<!--
    ===============
    Filters
    ===============
-->
<!-- AP Filters -->
  <filter>
    <name>Target Pitch Filter</name>
    <debug>false</debug>
    <type>noise-spike</type>
    <input>/autopilot/settings/target-pitch-deg</input>
    <output>/autopilot/internal/target-pitch-deg-filtered</output>
    <max-rate-of-change>4.0</max-rate-of-change>
  </filter>

  <filter>
    <name>Target Roll Filter</name>
    <debug>false</debug>
    <type>noise-spike</type>
    <input>/autopilot/settings/target-roll-deg</input>
    <output>/autopilot/internal/target-roll-deg-filtered</output>
    <max-rate-of-change>10.0</max-rate-of-change>
  </filter>

  <filter>
    <name>Target altitude Filter</name>
    <debug>false</debug>
    <type>noise-spike</type>
    <input>/autopilot/settings/target-altitude-ft</input>
    <output>/autopilot/internal/target-altitude-ft-filtered</output>
    <max-rate-of-change>400.0</max-rate-of-change>
  </filter>

  <filter>
    <name>GS1 Filter</name>
    <debug>false</debug>
    <type>noise-spike</type>
    <input>/instrumentation/nav[0]/gs-rate-of-climb</input>
    <output>/autopilot/internal/gs-rate-of-climb-filtered</output>
    <max-rate-of-change>60.0</max-rate-of-change>
  </filter>

  <filter>
    <name>Nav1 heading error Filter</name>
    <debug>false</debug>
    <type>noise-spike</type>
    <input>/autopilot/internal/nav1-heading-error-deg</input>
    <output>/autopilot/internal/nav1-heading-error-deg-filtered</output>
    <max-rate-of-change>30.0</max-rate-of-change>
  </filter>

<!--
    ===============
    Pitch Axis Modes
    ===============
-->

<!-- Pitch driver -->
  <pid-controller>
    <name>Elevon pitch driver(testing)</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/pitch</prop>
      <value>engaged</value>
    </enable>
    <input>
      <prop>/orientation/pitch-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/internal/target-pitch-deg-filtered</prop>
    </reference>
    <output>
      <prop>/controls/flight/elevator-trim</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>-0.018</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>2.0</Ti>
      <Td>0.1</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>

<!-- VFPS hold (elevon) -->
  <pid-controller>
    <name>VFPS hold</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/vfps</prop>
      <value>engaged</value>
    </enable>
    <input>
      <prop>/velocities/vertical-speed-fps</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-climb-rate-fps</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>0.15</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.1</Td>
      <u_min>-20.0</u_min>
      <u_max>30.0</u_max>
    </config>
  </pid-controller>

<!-- Altitude hold -->
  <pid-controller>
    <name>Altitude hold</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/altitude</prop>
      <value>altitude-hold</value>
    </enable>
    <input>
      <prop>/position/altitude-ft</prop>
    </input>
    <reference>
      <prop>/autopilot/internal/target-altitude-ft-filtered</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-climb-rate-fps</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>0.4</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>20.0</Ti>
      <Td>0.00000000000000000000000000000000001</Td>
      <u_min>-100.0</u_min>
      <u_max>100.0</u_max>
    </config>
  </pid-controller>

<!-- AGL hold. -->
  <pid-controller>
    <name>AGL hold</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/altitude</prop>
      <value>agl-hold</value>
    </enable>
    <input>
      <prop>/position/altitude-ft</prop>
    </input>
    <reference>
      <prop>/autopilot/internal/target-tfa-altitude-ft</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-climb-rate-fps</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>0.6</Kp>
      <beta>0.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>5.0</Ti>
      <Td>0.01</Td>
      <u_min>-60.0</u_min>
      <u_max>120.0</u_max>
    </config>
  </pid-controller>

<!-- AoA-by-speed Hold -->
 <pid-controller>
    <name>AoA-by-speed Hold</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/aoa</prop>
      <value>engaged</value>
    </enable>
    <input>
      <prop>/orientation/alpha-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-aoa-deg</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>-4.0</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>16.0</Ti>
      <Td>0.000000000000000001</Td>
      <u_min>110.0</u_min>
      <u_max>450.0</u_max>
    </config>
   </pid-controller>

<!-- Mach climb hold -->
   <pid-controller>
     <name>Mach Lock Climb Stage 1</name>
     <debug>false</debug>
     <enable>
       <prop>/autopilot/locks/altitude</prop>
       <value>mach-climb</value>
     </enable>
     <input>
       <prop>/autopilot/settings/target-mach</prop>
     </input>
     <reference>
       <prop>/velocities/mach</prop>
     </reference>
     <output>
       <prop>/autopilot/settings/target-climb-rate-fps</prop>
     </output>
     <config>
       <Kp>6400.0</Kp>        <!-- proportional gain -->
       <beta>1.0</beta>    <!-- input value weighing factor -->
       <alpha>0.01</alpha>  <!-- low pass filter weighing factor -->
       <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
       <Ti>60.0</Ti>     <!-- integrator time -->
       <Td>0.01</Td>    <!-- derivator time -->
       <u_min>-1.0</u_min> <!-- minimum output clamp -->
       <u_max>300.0</u_max> <!-- maximum output clamp -->
      </config>
    </pid-controller>

<!--
    ===============
    Roll Axis Modes
    ===============
-->
<!-- Roll driver -->
  <pid-controller>
    <name>Elevon roll driver</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/roll</prop>
      <value>engaged</value>
    </enable>
    <input>
      <prop>/orientation/roll-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/internal/target-roll-deg-filtered</prop>
    </reference>
    <output>
      <prop>/controls/flight/aileron</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>0.02</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>4.0</Ti>
      <Td>0.1</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>

<!-- Heading Bug hold -->
  <pid-controller>
    <name>Heading Bug Hold (DG based) Stage 1</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/heading</prop>
      <value>dg-heading-hold</value>
    </enable>
    <input>
      <prop>/autopilot/internal/fdm-heading-bug-error-deg</prop>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <prop>/autopilot/settings/target-roll-deg</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>-2.0</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>20.0</Ti>
      <Td>0.0000000000000000001</Td>
      <u_min>-45.0</u_min>
      <u_max>45.0</u_max>
    </config>
  </pid-controller>

<!-- True heading hold -->
  <pid-controller>
    <name>True Heading Hold Stage 1</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/heading</prop>
      <value>true-heading-hold</value>
    </enable>
    <input>
      <prop>/autopilot/internal/true-heading-error-deg</prop>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <prop>/autopilot/settings/target-roll-deg</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>-4.0</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha> 
      <gamma>0.0</gamma>
      <Ti>16.0</Ti>
      <Td>0.1</Td>
      <u_min>-45.0</u_min>
      <u_max>45.0</u_max>
    </config>
  </pid-controller>

<!-- Nav1 hold -->
  <pid-controller>
    <name>Nav1 Hold Stage 1</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/heading</prop>
      <value>nav1-hold</value>
    </enable>
    <input>
      <prop>/autopilot/internal/nav1-heading-error-deg-filtered</prop>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <prop>/autopilot/settings/target-roll-deg</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>-2.5</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>20</Ti>
      <Td>0.0000001</Td>
      <u_min>-40.0</u_min>
      <u_max>40.0</u_max>
    </config>
  </pid-controller>

<!--
    ==============
    Velocity Modes
    ==============
-->

<!-- Simple Auto throttle -->
 <pid-controller>
    <name>Auto Throttle</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>speed-with-throttle</value>
    </enable>
    <input>
      <prop>/velocities/airspeed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/controls/engines/engine[0]/throttle</prop>
      <prop>/controls/engines/engine[1]/throttle</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>0.02</Kp>        <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>20.0</Ti>       <!-- integrator time -->
      <Td>0.00001</Td>    <!-- derivator time -->
      <u_min>0.0</u_min>  <!-- minimum output clamp -->
      <u_max>1.0</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

<!-- Simple Auto throttle (Mach) -->
 <pid-controller>
    <name>Auto Throttle (Mach)</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>mach-with-throttle</value>
    </enable>
    <input>
      <prop>/velocities/mach</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-mach</prop>
    </reference>
    <output>
      <prop>/controls/engines/engine[0]/throttle</prop>
      <prop>/controls/engines/engine[1]/throttle</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>16.0</Kp>        <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>20.0</Ti>       <!-- integrator time -->
      <Td>0.00001</Td>    <!-- derivator time -->
      <u_min>0.0</u_min>  <!-- minimum output clamp -->
      <u_max>1.0</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

<!-- Hold speed by varying pitch (Two stage cascading controller) -->
 <pid-controller>
    <name>Speed hold (vary pitch) Stage #1</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>speed-with-pitch</value>
    </enable>
    <input>
      <prop>/autopilot/internal/lookahead-5-sec-airspeed-kt</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-speed-kt</prop>
    </reference>
    <output>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>-1.0</Kp>       <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>1.0</Ti>        <!-- integrator time -->
      <Td>0.00001</Td>    <!-- derivator time -->
      <u_min>-15.0</u_min><!-- minimum output clamp -->
      <u_max>15.0</u_max> <!-- maximum output clamp -->
    </config>
  </pid-controller>

 <pid-controller>
    <name>Speed hold (vary pitch) Stage #2</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/speed</prop>
      <value>speed-with-pitch</value>
    </enable>
    <input>
      <prop>/orientation/pitch-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/target-pitch-deg</prop>
    </reference>
    <output>
      <prop>/controls/flight/elevator-trim</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>-0.05</Kp>      <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>1.0</Ti>        <!-- integrator time -->
      <Td>0.00001</Td>    <!-- derivator time -->
      <u_min>-1.0</u_min> <!-- minimum output clamp -->
      <u_max>1.0</u_max>  <!-- maximum output clamp -->
    </config>
  </pid-controller>

<!--
    ==================
    Custom Controllers
    ==================
-->

<!-- Simple Ground Roll Rudder Heading Hold -->
 <pid-controller>
    <name>Ground Roll Rudder hold</name>
    <debug>false</debug>
    <enable>
      <prop>/autopilot/locks/rudder</prop>
      <value>heading-hold</value>
    </enable>
    <input>
      <prop>/orientation/heading-deg</prop>
    </input>
    <reference>
      <prop>/autopilot/settings/ground-roll-heading-deg</prop>
    </reference>
    <output>
      <prop>/controls/flight/rudder</prop>
    </output>
    <config>
      <Ts>0.05</Ts>
      <Kp>0.2</Kp>      <!-- proportional gain -->
      <beta>1.0</beta>    <!-- input value weighing factor -->
      <alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
      <gamma>0.0</gamma>  <!-- input value weighing factor for -->
                          <!-- unfiltered derivative error -->
      <Ti>2.0</Ti>        <!-- integrator time -->
      <Td>0.4</Td>    <!-- derivator time -->
      <u_min>-1.0</u_min> <!-- minimum output clamp -->
      <u_max>1.0</u_max>  <!-- maximum output clamp -->
    </config>
   </pid-controller>

</PropertyList>
