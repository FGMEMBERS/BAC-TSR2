<?xml version="1.0"?>

<!--

-->

<PropertyList>

  <name>Text Auto Pilot Instrument</name>
  <w-base>240</w-base>
  <h-base>20</h-base>

  <params>
    <ah-select>/autopilot/locks/altitude</ah-select>
    <tf-select>/autopilot/locks/altitude</tf-select>
    <mc-select>/autopilot/locks/altitude</mc-select>
  </params>

  <layers>
<!-- Titles -->
    <layer>
      <name>background</name>
      <texture>
        <path>Aircraft/BAC-TSR2/Panels/Instruments/Textures/trans-green-bg.rgb</path>
      </texture>
      <w>240</w>
      <h>20</h>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>0</offset>
        </transformation>
      </transformations>
    </layer>

<!-- All Off -->
    <layer>
      <name>Title</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>AP Mode: </text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-110</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- AP Activated -->
    <layer>
      <condition>
        <not-equals>
          <property>/autopilot/locks/altitude</property>
          <value></value>
        </not-equals>
      </condition>
      <name>Title</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>1</red>
        <green>0</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>AP Mode: </text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-110</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Altitude hold -->
<!-- Off -->
    <layer>
      <condition>
        <not-equals>
          <property>/autopilot/locks/altitude</property>
          <value>altitude-hold</value>
        </not-equals>
      </condition>
      <name>Altitude hold - Off</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0.0</red>
        <green>0.9</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>AH</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-23</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- On -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/altitude</property>
          <value>altitude-hold</value>
        </equals>
      </condition>
      <name>Altitude hold - On</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>1.0</red>
        <green>0.5</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>AH</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-23</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- AGL Hold follow -->
<!-- Off -->
    <layer>
      <condition>
        <not-equals>
          <property>/autopilot/locks/altitude</property>
          <value>agl-hold</value>
        </not-equals>
      </condition>
      <name>AGL Hold - Off</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>TF</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>5</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- On -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/altitude</property>
          <value>agl-hold</value>
        </equals>
      </condition>
      <name>AGL Hold - On</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>1.0</red>
        <green>0.5</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>TF</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>5</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Auto Take-off -->
<!-- Disabled -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/auto-take-off</property>
          <value>Disabled</value>
        </equals>
      </condition>
      <name>Take-Off - Disabled</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0.5</red>
        <green>0.5</green>
        <blue>0.5</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>TO</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>33</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Enabled -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/auto-take-off</property>
          <value>Enabled</value>
        </equals>
      </condition>
      <name>Take-Off - Enabled</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0.0</red>
        <green>1.0</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>TO</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>33</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Ground Roll Phase -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/altitude</property>
          <value>ground-roll</value>
        </equals>
      </condition>
      <name>Rotate Engaged</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>TO</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>33</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Take-off Phase -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/altitude</property>
          <value>take-off</value>
        </equals>
      </condition>
      <name>Rotate Engaged</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>1.0</red>
        <green>0.0</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>TO</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>33</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Climb Out Phase -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/altitude</property>
          <value>co-vfps-hold</value>
        </equals>
      </condition>
      <name>Climb Out Engaged</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>1.0</red>
        <green>0.5</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>TO</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>33</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Auto Landing -->
<!-- Disabled -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/auto-landing</property>
          <value>Disabled</value>
        </equals>
      </condition>
      <name>Instrument Landing - Disabled</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0.5</red>
        <green>0.5</green>
        <blue>0.5</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>IL</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>65</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Enabled -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/auto-landing</property>
          <value>Enabled</value>
        </equals>
      </condition>
      <name>Instrument Landing - Enabled</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0.0</red>
        <green>1.0</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>IL</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>65</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Glideslope Clamp Phase -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/altitude</property>
          <value>gs-vfps-hold</value>
        </equals>
      </condition>
      <name>Glideslope Clamp Phase</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>IL</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>65</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Glideslope Phase -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/altitude</property>
          <value>gs1-hold</value>
        </equals>
      </condition>
      <name>Glideslope Phase</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0.0</red>
        <green>0.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>IL</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>65</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Touch Down Phase -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/altitude</property>
          <value>touch-down</value>
        </equals>
      </condition>
      <name>Touch Down Phase</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>1.0</red>
        <green>0.0</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>IL</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>65</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Mach Climb -->
<!-- Disabled -->
    <layer>
      <condition>
        <not-equals>
          <property>/autopilot/locks/speed</property>
          <value>mach-with-throttle</value>
        </not-equals>
      </condition>
      <name>Mach Climb Disabled</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0.5</red>
        <green>0.5</green>
        <blue>0.5</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>MC</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>89</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Enabled -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/speed</property>
          <value>mach-with-throttle</value>
        </equals>
      </condition>
      <name>Mach Climb - Enabled</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>0.0</red>
        <green>1.0</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>MC</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>89</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Engaged -->
    <layer>
      <condition>
        <equals>
          <property>/autopilot/locks/altitude</property>
          <value>mach-climb</value>
        </equals>
      </condition>
      <name>Mach Climb - Engaged</name>
      <type>text</type>
      <point-size>16</point-size>
      <color>
        <red>1.0</red>
        <green>0.5</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>MC</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>89</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

  </layers>

  <actions>

<!-- Disengage Autopilot -->
    <action>
      <name>Autopilot Off</name>
      <button>0</button>
      <x>-115</x>
      <y>-10</y>
      <w>90</w>
      <h>18</h>
      <binding>
        <command>property-assign</command>
        <property alias="../../../../params/ah-select"/>
        <value type="string"></value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/autopilot/locks/auto-take-off</property>
        <value type="string">Enabled</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/autopilot/locks/auto-landing</property>
        <value type="string">Disabled</value>
      </binding>
    </action>

<!-- Engage Alititude Hold -->
    <action>
      <name>Altitude Hold Select</name>
      <button>0</button>
      <x>-26</x>
      <y>-10</y>
      <w>28</w>
      <h>18</h>
      <binding>
        <command>property-assign</command>
        <property alias="../../../../params/ah-select"/>
        <value type="string">altitude-hold</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/autopilot/locks/auto-landing</property>
        <value type="string">Enabled</value>
      </binding>
    </action>

<!-- Engage AGL Hold -->
    <action>
      <name>AGL Hold Select</name>
      <button>0</button>
      <x>2</x>
      <y>-10</y>
      <w>28</w>
      <h>18</h>
      <binding>
        <command>property-assign</command>
        <property alias="../../../../params/tf-select"/>
        <value type="string">agl-hold</value>
      </binding>
    </action>

<!-- Engage Take-Off Mode -->
    <action>
      <name>Take Off Select</name>
      <button>0</button>
      <x>31</x>
      <y>-10</y>
      <w>28</w>
      <h>18</h>
      <binding>
        <command>nasal</command>
        <script>TSR2.autotakeoff()</script>
      </binding>
    </action>

<!-- Engage instrument Landing -->
    <action>
      <name>Instrument Landing Select</name>
      <button>0</button>
      <x>60</x>
      <y>-10</y>
      <w>28</w>
      <h>18</h>
      <binding>
        <command>nasal</command>
        <script>TSR2.autoland()</script>
      </binding>
    </action>

<!-- Engage Mach Climb -->
    <action>
      <name>Mach Climb Select</name>
      <button>0</button>
      <x>88</x>
      <y>-10</y>
      <w>28</w>
      <h>18</h>
      <binding>
        <condition>
          <equals>
            <property>/autopilot/locks/speed</property>
            <value>mach-with-throttle</value>
          </equals>
        </condition>
        <command>property-assign</command>
        <property alias="../../../../params/mc-select"/>
        <value type="string">mach-climb</value>
      </binding>
    </action>

  </actions>

</PropertyList>
