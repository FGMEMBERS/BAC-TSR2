<?xml version="1.0"?>

<PropertyList>
  <name>AP climb controller monitor</name>
  <w-base>384</w-base>
  <h-base>192</h-base>

  <layers>

    <layer>
      <name>gauge face</name>
      <texture>
        <path>Aircraft/BAC-TSR2/Panels/Instruments/Textures/trans-dgrey-bg.rgb</path>
        <x1>0.0</x1>
        <x2>1.0</x2>
        <y1>0.0</y1>
        <y2>1.0</y2>
      </texture>
      <w>384</w>
      <h>192</h>
    </layer>

    <layer>
      <name>Title</name>
      <type>text</type>
      <point-size>18</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>HI-ELEV TARGET</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-188</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>80</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Flight level line</name>
      <type>text</type>
      <point-size>18</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>________________________________</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-180</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>0</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Aircraft Loc</name>
      <type>text</type>
      <point-size>88</point-size>
      <color>
        <red>1.0</red>
        <green>0.0</green>
        <blue>0.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>.</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>170</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-5</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Hi elev Target clearance</name>
      <texture>
        <path>Aircraft/BAC-TSR2/Panels/Instruments/Textures/needles-LE000.rgb</path>
        <x1>0.0</x1>
        <x2>0.1</x2>
        <y1>0.5</y1>
        <y2>1.0</y2>
      </texture>
      <w>24</w>
      <h>240</h>
      <transformations>
        <transformation>
          <type>y-shift</type>
          <offset>-122</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <property>/instrumentation/terrain-radar/hi-elev/alt-ft</property>
          <min>-200</min>
          <max>40000</max>
          <scale>0.1</scale>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <property>/position/altitude-ft</property>
          <min>-200</min>
          <max>40000</max>
          <scale>-0.1</scale>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <property>/autopilot/settings/target-agl-ft</property>
          <min>-200</min>
          <max>40000</max>
          <scale>0.1</scale>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>x-shift</type>
          <property>/instrumentation/terrain-radar/hi-elev/dist-m</property>
          <min>-200</min>
          <max>2500</max>
          <scale>-0.13</scale>
          <offset>170</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Hi elev Target upright</name>
      <texture>
        <path>Aircraft/BAC-TSR2/Panels/Instruments/Textures/needles-LE000.rgb</path>
        <x1>0.0</x1>
        <x2>0.1</x2>
        <y1>0.0</y1>
        <y2>0.5</y2>
      </texture>
      <w>24</w>
      <h>240</h>
      <transformations>
        <transformation>
          <type>y-shift</type>
          <offset>-122</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <property>/instrumentation/terrain-radar/hi-elev/alt-ft</property>
          <min>-200</min>
          <max>40000</max>
          <scale>0.1</scale>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <property>/position/altitude-ft</property>
          <min>-200</min>
          <max>40000</max>
          <scale>-0.1</scale>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>x-shift</type>
          <property>/instrumentation/terrain-radar/hi-elev/dist-m</property>
          <min>-200</min>
          <max>2500</max>
          <scale>-0.13</scale>
          <offset>170</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Hi elev Target crossbar</name>
      <texture>
        <path>Aircraft/BAC-TSR2/Panels/Instruments/Textures/needles-LE000.rgb</path>
        <x1>0.0</x1>
        <x2>0.1</x2>
        <y1>0.0</y1>
        <y2>0.5</y2>
      </texture>
      <w>24</w>
      <h>40</h>
      <transformations>
        <transformation>
          <type>y-shift</type>
          <property>/instrumentation/terrain-radar/hi-elev/alt-ft</property>
          <min>-200</min>
          <max>40000</max>
          <scale>0.1</scale>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <property>/position/altitude-ft</property>
          <min>-200</min>
          <max>40000</max>
          <scale>-0.1</scale>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>x-shift</type>
          <property>/instrumentation/terrain-radar/hi-elev/dist-m</property>
          <min>-200</min>
          <max>2500</max>
          <scale>-0.13</scale>
          <offset>170</offset>
        </transformation>
        <transformation>
          <type>rotation</type>
          <offset>90</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Climb indicator</name>
      <texture>
        <path>Aircraft/BAC-TSR2/Panels/Instruments/Textures/needles-LE000.rgb</path>
        <x1>0.0</x1>
        <x2>0.1</x2>
        <y1>0.0</y1>
        <y2>0.5</y2>
      </texture>
      <w>24</w>
      <h>360</h>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>176</offset>
        </transformation>
        <transformation>
          <type>rotation</type>
          <property>/velocities/vertical-speed-fps</property>
          <min>-60</min>
          <max>120</max>
          <scale>0.2</scale>
          <offset>-90</offset>
        </transformation>
        <transformation>
          <type>x-shift</type>
          <offset>-4</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>176</offset>
        </transformation>
      </transformations>
    </layer>

  </layers>

</PropertyList>
