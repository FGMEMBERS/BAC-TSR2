<?xml version="1.0"?>

<PropertyList>
  <name>AP pitch controller monitor</name>
  <w-base>128</w-base>
  <h-base>192</h-base>

  <layers>

    <layer>
      <name>gauge face</name>
      <texture>
        <path>Aircraft/BAC-TSR2/Panels/Instruments/Textures/trans-dgrey-bg.rgb</path>
        <x1>0.0</x1>
        <x2>1.0</x2>
        <y1>0.0</y1>
        <y2>1.0</y2>
      </texture>
      <w>128</w>
      <h>192</h>
    </layer>

    <layer>
      <name>P Title</name>
      <type>text</type>
      <point-size>18</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>P</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-60</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>40</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>I Title</name>
      <type>text</type>
      <point-size>18</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>I</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-57</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>20</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>T Title</name>
      <type>text</type>
      <point-size>18</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>T _________</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-60</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>0</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>C Title</name>
      <type>text</type>
      <point-size>18</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>C</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-60</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-20</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>H Title</name>
      <type>text</type>
      <point-size>18</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>H</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-60</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-40</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Pitch Target</name>
      <texture>
        <path>Aircraft/BAC-TSR2/Panels/Instruments/Textures/needles-LE000.rgb</path>
        <x1>0.0</x1>
        <x2>0.1</x2>
        <y1>0.5</y1>
        <y2>1.0</y2>
      </texture>
      <w>24</w>
      <h>44</h>
      <transformations>
        <transformation>
          <type>y-shift</type>
          <property>/autopilot/internal/target-pitch-deg-filtered</property>
          <min>-20</min>
          <max>30</max>
          <scale>4</scale>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>x-shift</type>
          <offset>-10</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>rotation</type>
          <offset>90</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Pitch</name>
      <texture>
        <path>Aircraft/BAC-TSR2/Panels/Instruments/Textures/needles-LE000.rgb</path>
        <x1>0.0</x1>
        <x2>0.1</x2>
        <y1>0.0</y1>
        <y2>0.5</y2>
      </texture>
      <w>24</w>
      <h>44</h>
      <transformations>
        <transformation>
          <type>y-shift</type>
          <property>/orientation/pitch-deg</property>
          <min>-20</min>
          <max>30</max>
          <scale>4</scale>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>x-shift</type>
          <offset>30</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>rotation</type>
          <offset>90</offset>
        </transformation>
      </transformations>
    </layer>

   </layers>

</PropertyList>
